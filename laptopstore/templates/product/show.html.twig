{% extends 'base.html.twig' %}

{% block title %}
            {{ product.name}}
{% endblock %}

{% block body %}
<div class=" container row my-5">
    <div class="col-md-12">
        <div class="my-3 d-flex justify-content-between align-items-center">
            <div>
                <a href="{{ path('order_new', {product: product.id})}}" class="btn btn-sm btn-outline-dark mx-1">Order now</a>          
            </div>
        </div>
        <div class="row">
            {% if product %}
                    <div class="col-md-12">
                        <div class="card" style="width: 18rem, height: 100%">
                            {% if product.image %}
                            <img src="{{asset('uploads/' ~ product.image) }}" alt="" class="card-img-top">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ product.name}}</h5>
                                <p class="card-text">{{ product.description}}</p>
                                <h5><span class="text text-danger">{{product.price}} $</span></h5>
                                <h5><span class="text text-success">{{product.category.name}}</span></h5>
                            </div>
                        </div>
                    </div>
                {% else %}
                <p>pas de produit</p>
            {% endif %}
        </div>
    </div>
</div>


{% endblock %}
